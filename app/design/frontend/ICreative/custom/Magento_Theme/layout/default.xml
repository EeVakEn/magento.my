<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!--Header-->
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_width" xsi:type="number">111</argument>
                <argument name="logo_height" xsi:type="number">43</argument>
                <argument name="logo_alt" xsi:type="string">Proto</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="header-wrapper">
            <referenceContainer name="compare-link-wrapper" remove="true"/>
            <container name="header.left" htmlClass="header-left" htmlTag="div" before="header.right"/>
            <container name="header.right" htmlClass="header-rigth" htmlTag="div">
                <container htmlClass="header-contact" name="header.contact" htmlTag="div">
                    <block name="header_contact" class="ICreative\HeaderContact\Block\Phone" template="ICreative_HeaderContact::header_contacts.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">ICreative\HeaderContact\ViewModel\Phone</argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceBlock>

        <!--Move to header-->
        <move element="logo" destination="header.left" before="-"/>
        <move element="navigation.sections" destination="header.left" after="logo"/>
        <move element="top.search" destination="header.left" after="navigation.sections"/>
        <move element="minicart" destination="header.right" after="-"/>
    </body>

</page>
